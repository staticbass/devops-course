node {
	def app

	stage('Setup repository') {
		checkout scm
	}

	stage('Build image') {
		dir('./lesson-3') {
			sh "docker build -t ostrenkovlad/lesson-3-nginx:${env.BUILD_NUMBER} --build-arg MY_NAME=Vlad -f Dockerfile.nginx ."
		}
	}

	stage('Push image') {
		dir('./lesson-3') {
			docker.withRegistry('https://registry.hub.docker.com', 'docker-hub') {
				sh "docker push ostrenkovlad/lesson-3-nginx:${env.BUILD_NUMBER}"
			}
		}
	}
}