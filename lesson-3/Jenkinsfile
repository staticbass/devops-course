node {
	def app

	stage('Setup repository') {
		checkout scm
	}

	stage('Build image') {
		dir('./lesson-3') {
			app = docker.build("ostrenkovlad/lesson-3-nginx:${env.BUILD_NUMBER} -f Dockerfile.nginx" , "--build-arg MY_NAME=Vlad")
		}
	}

	stage('Push image') {
		dir('./lesson-3') {
			docker.withRegistry('https://registry.hub.docker.com', 'docker-hub') {
				app.push()
			}
		}
	}
}